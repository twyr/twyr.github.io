{
	"git": {
		"commitMessage": "chore(release): twyr.github.io ${version}",

		"requireBranch": "master",
		"requireCleanWorkingDir": true,
		"requireCommits": true,
		"requireUpstream": true,

		"tagAnnotation": "twyr.github.io ${version}"
	},
	"github": {
		"release": true,
		"releaseName": "twyr.github.io ${version}"
	},

	"npm": {
		"publish": false
	},

	"plugins": {
		"@release-it/conventional-changelog": {
			"preset": "angular",
			"infile": "CHANGELOG.md"
		}
	}
}
